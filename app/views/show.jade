extends ./layouts/main

block content
    .container#topbar
        #side
            img(src="/poster/show/" + show.id)
        #overview
            .container.styled #{show.overview}
    .container.seasons.styled
        - for season in show.seasons
            - if(season.seasonNumber != 0 || (season.seasonNumber == 0 && !show.specialsHidden))
                .holder.styled
                    a(href="/show/" + show.id + "/" + season.seasonNumber)
                        img(src="/poster/show/" + show.id + "/" + season.seasonNumber)
