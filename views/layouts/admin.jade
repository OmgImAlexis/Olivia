html
    head
        title= title || 'tv and movie thing'
        link(href="//cdnjs.cloudflare.com/ajax/libs/pure/0.6.0/pure-min.css", rel="stylesheet", type="text/css")
        link(href="/css/main.css", rel="stylesheet", type="text/css")
    body
        #header
            nav.nav
                ul
                    li
                        a(href="/", class=(currentPath == '/' ? 'currentPage' : '')) Home
                    li
                        a(href="/shows/new", class=(currentPath == '/shows/new' ? 'currentPage' : '')) Add new show
                    li
                        a(href="/shows/comingSoon", class=(currentPath == '/shows/comingSoon' ? 'currentPage' : '')) Coming episodes
                    li
                        a(href="/shows/history", class=(currentPath == '/shows/history' ? 'currentPage' : '')) History
                    li
                        a(href="/logs", class=(currentPath == '/logs' ? 'currentPage' : '')) Logs
                    li
                        a(href="/settings/general", class=(currentPath == '/settings/general' ? 'currentPage' : '')) Config
        block beforeContent
        .container
            block content
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery-timeago/1.4.1/jquery.timeago.min.js")
    script(src="/js/main.js")
    block scripts
